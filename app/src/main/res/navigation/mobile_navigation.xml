<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_device">

    <!-- 注意！：下面fragment指定的id需要和底部导航栏样式的id相同，也就是bottom_nav_menu.xml中各item的id，
         android根据底部按钮的id来绑定按钮与fragment-->
    <fragment
        android:id="@+id/navigation_device"
        android:name="com.example.bluetooth.ui.device.DeviceFragment"
        tools:layout="@layout/fragment_device">
    </fragment>

    <fragment
        android:id="@+id/navigation_data"
        android:name="com.example.bluetooth.ui.data.DataFragment"
        tools:layout="@layout/fragment_data"/>

</navigation>